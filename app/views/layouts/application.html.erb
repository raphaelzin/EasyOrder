<!DOCTYPE html>
<html>
  <head>
    <title>EasyOrder</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <!-- Flash -->
    <% if flash[:success] %>
      <div class="alert-success">
        <%= flash[:success]%><br>
      </div>
    <%end%>
    <% if flash[:error] %>
      <div class="alert-error">
        <%= flash[:error]%><br>
      </div>
    <%end%>
    <script>
      alertMessage();
    </script>
    <!-- Flash End -->

    <% if current_waiter.present?%>
    <div id="toolbar">
      Logged as <%= current_waiter.name %> - 
      <%= link_to 'Sign out', sign_out_path, method: :delete %>
       / <%= link_to "Back to tables", waiters_tables_path %>
       <br>
    </div>
    <%end%>
    
    <% current_admin.inspect%>
  	<% current_client.inspect%>
    <% current_waiter.inspect%>
    <% current_table.inspect%>

  		<%= yield %>
  </body>
</html>
