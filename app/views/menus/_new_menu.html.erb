
<%= form_for(@new) do |f| %>
<%= f.label t(:language) %><br>
<%= f.text_field :language, required: true, class: "form-control"%>
<br>
<%= f.label t(:locale) %><br>
<%= f.text_field :locale, required: true, placeholder: "ex: en, pt_br, es", class: "form-control"%>
<br>

<%= f.submit t(:add_menu), class: "btn btn-primary" %>
<% end %>
