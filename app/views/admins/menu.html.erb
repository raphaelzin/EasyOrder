<div id="container" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<h2>View and edit the menu</h2>

<% Category.all.each do |c| %>
<h3><%= c.name %></h3>
<table class="table table-bordered col-xs-12">

	<% c.dishes.each do |d| %>
		<tr>
			<td class="menuData">
				<div class="col-xl-1 col-md-1">
					<%= image_tag d.picture.url, class: "dishPicture img-circle" %>
				</div>
				<div class="text-left col-xl-7 col-md-7">
					<%= d.title %> ($ <%= d.price %>)<br>
					<%= d.description %><br>
				</div>
				<div class="text-left col-xl-4 col-md-4">
				<%= link_to "Delete", category_dish_path(d.category,d), :method => :delete, data: {confirm: 'Are you sure you want to delete this Dish?'}, class: "btn btn-danger pull-right"%>

				<%= link_to "Edit", edit_category_dish_path(d.category,d), class: "btn btn-primary pull-right"%>
				</div>
			</td>
		</tr>
	<% end %>
</table>
<% end %>
<br><br>
<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#AddModal">Add Dish</button><br><br>

<div id="AddModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Dish Form</h4>
      </div>
      <div class="modal-body">
        <%= render "dishes/new_dish" %>
      </div>
    </div>
  </div>
</div>
</div>