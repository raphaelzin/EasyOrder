<div id="container" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<h2><%= t(:menu_you_have) %></h2>
<!-- <hr> -->

<table class="table table-bordered">
	<% Menu.all.each do |m| %>	
		<tr>
			<td>
				<div class="text-left col-xl-6 col-md-6">
					<%= "#{t(:language)}: #{m.language}" %><br>
					<%= "#{t(:locale)}: #{m.locale}" %><br>
				</div>

				<div class="text-left col-xl-6 col-md-6">
					<%= link_to t(:delete), menu_path(m), :method => :delete, data: {confirm: 'Are you sure you want to delete this Menu?'}, class: "btn btn-danger pull-right"%>

				<%= link_to t(:edit), edit_menu_path(m), class: "btn btn-primary pull-right"%>
				</div>
			</td>
		</tr>
	<% end %>	
</table>
<!-- <hr> -->


<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#AddModal"><%= t(:add_menu) %></button><br><br>

<div id="AddModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t(:add_menu) %></h4>
      </div>
      <div class="modal-body">
        <%= render "menus/new_menu" %>
      </div>
    </div>
  </div>
</div>


</div>