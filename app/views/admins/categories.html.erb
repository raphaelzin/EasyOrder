<div id="container" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<h2>These are the Categories you have</h2>
<!-- <hr> -->
<table class="table table-bordered">
	<% @categories.each do |c| %>
		<tr>
			<td>
				<div class="text-left col-xl-6 col-md-6">
					<%= c.name %><br>
					<%= c.description %>
				</div>

				<div class="text-left col-xl-6 col-md-6">
					<%= link_to "Delete", category_path(c), :method => :delete, data: {confirm: 'Are you sure you want to delete this Waiter?'}, class: "btn btn-danger pull-right"%>

				<%= link_to "Edit", edit_category_path(c), class: "btn btn-primary pull-right"%>
				</div>
			</td>
		</tr>
	<% end %>
</table>
<!-- <hr> -->

<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#AddModal">Add category</button><br><br>

<div id="AddModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Category Form</h4>
      </div>
      <div class="modal-body">
        <%= render "categories/new_category" %>
      </div>
    </div>
  </div>
</div>


</div>