<div id="container" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

<h2>This is your staff</h2>
<h4><%= @waiters.count %> registered waiters</h4>
<!-- <hr> -->

<!-- <div class="table-responsive"> -->
<table class="table table-bordered">
	<% @waiters.each do |w| %>
		<tr> 
			<td>
				<div class="text-left col-xl-6 col-md-6">
					Name: <%= w.name %><br>
					CPF: <%= w.cpf %><br>
					Phone: <%= w.phone %><br>
					<% if w.tables.count > 0 %>
					In charge of <%= pluralize(w.tables.count,'table') %>: 
					<%= w.tables.collect {|t| t.number}.join ', '%>
					<% end %>
				</div>
				<div class="text-right col-xl-6 col-md-6">

				<%= link_to "Delete", waiter_path(w), :method => :delete, data: {confirm: 'Are you sure you want to delete this Waiter?'}, class: "btn btn-danger pull-right"%>


				<%= link_to "Edit", edit_waiter_path(w), class: "btn btn-primary pull-right"%>
				</div>
			</td>
		</tr>
	<% end %>
</table>
<!-- </div> -->
<!-- <hr> -->
<br>
<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#AddModal">Add Waiter</button><br><br>

<div id="AddModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Waiter Form</h4>
      </div>
      <div class="modal-body">
        <%= render "waiters/add_waiter" %>
      </div>
    </div>
  </div>
</div>


</div>