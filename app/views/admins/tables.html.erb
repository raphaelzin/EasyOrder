<div id="container" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

<h2>These are the tables</h2>
<!-- <hr> -->
<table class="table table-bordered">
	<% @tables.each do |t| %>
		<% if t.number == 0 %>
			<% next %>
		<% end %>
		<tr>
			<td>
				<div class="text-left col-xl-6 col-md-6">
					Table: <%= t.number %><br>
					Table's Code: <%= t.code %><br>
				</div>
				<div class="text-left col-xl-6 col-md-6">
				<%= link_to "Delete", table_path(t), :method => :delete, data: {confirm: 'Are you sure you want to delete this Table?'}, class: "btn btn-danger pull-right"%>

				<%= link_to "Edit", edit_table_path(t), class: "btn btn-primary pull-right"%>
				</div>
			</td>
		</tr>
	<% end %>
</table>



<!-- <hr> -->

<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#AddModal">Add Dish</button><br><br>


<div id="AddModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Table Form</h4>
      </div>
      <div class="modal-body">
        <%= render "tables/new_table" %>
      </div>
    </div>
  </div>
</div>


</div>

